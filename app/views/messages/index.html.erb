<p id="notice"><%= notice %></p>

<h1>Mensagens recebidas</h1>

<%= link_to 'escrever mensagem para um amigo', new_message_path, class: 'btn btn-primary col-sm-offset-8' %>
<table class="table table-striped">
  <thead>
    <th>
      amigo
    </th>
    <th>
      mensagem
    </th>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.user.email %></td>
        <td><%= message.message %></td>
        <td>
          <div class='btn-group pull-right'>
            <%#= link_to 'Edit', edit_message_path(message) %>
            <%= link_to 'excluir mensagem', message, method: :delete, data: { confirm: 'tem certeza?' },class: 'btn btn-primary' %>
          </div>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

