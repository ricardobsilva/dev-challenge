<p id="notice"><%= notice %></p>

<h1>seus amigos</h1>
<div class="col-sm-11 col-sm-offset-1">
  <table class="table table-striped">
    <thead>
      <tr>
        <td></td>
        <th>email</th>
        <th>ações</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |user| %>
        <tr>
          <td><%= image_tag(user.friend.try(:image), size: "66")%></td>
          <td><%= user.friend.try(:email) %></td>
          <td>
            <div class=" btn btn-group btn-right">
                <%= link_to 'ver perfil', user_path(user.friend.id) , class: 'btn btn-primary btn-sm' %>
                <%= link_to 'desfazer amizade', dfriend_user_path(user.id) , class: 'btn btn-primary btn-sm' %>
                <%#= link_to 'desfazer amizade', user, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-primary btn-sm' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= will_paginate @friends, renderer: BootstrapPagination::Rails %>
